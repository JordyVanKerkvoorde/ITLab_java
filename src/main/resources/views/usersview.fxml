<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorpane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ITLab.controller.UsersViewController">
    <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
         <HBox prefHeight="56.0" prefWidth="590.0">
            <children>
                  <Label fx:id="titleLbl" alignment="CENTER">Users</Label>
               <AnchorPane fx:id="spacing1" prefHeight="200.0" prefWidth="200.0" />
                  <JFXButton fx:id="addUserButton" alignment="CENTER" buttonType="RAISED" contentDisplay="CENTER" text="Gebruiker toevoegen" />
               <AnchorPane fx:id="spacing2" prefHeight="200.0" prefWidth="200.0" />
               <JFXTextField fx:id="searchTx" promptText="Zoeken..." />
            </children>
            <VBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
         </HBox>
            <TableView fx:id="userTableView" prefHeight="378.0" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="familieNaamColumn" prefWidth="75.0" text="Familienaam" />
                    <TableColumn fx:id="voornaamColumn" prefWidth="75.0" text="Voornaam" />
                    <TableColumn fx:id="typeColumn" prefWidth="75.0" text="Type" />
                    <TableColumn fx:id="statusColumn" prefWidth="75.0" text="Status" />
                    <TableColumn fx:id="emailColumn" prefWidth="75.0" text="Email" />
                </columns>
            </TableView>
        </children>
    </VBox>
</AnchorPane>
